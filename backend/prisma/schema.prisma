generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model Invoice {
  id            Int      @id @default(autoincrement())
  invoiceNumber String   @unique
  clientName    String
  amount        Float
  date          String
  status        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
